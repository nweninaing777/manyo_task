<!DOCTYPE html>
<html>
  <head>
    <title>ManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
        <br>
        <div class="log_tags">
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "#{key}") %>
          <% end %>
          <% if logged_in? %>
            <%= link_to "Profile", user_path(current_user.id) %>
            <%= link_to "Logout", session_path(current_user.id), method: :delete %>
          <% if current_user.admin? %>
         <button type="button" class="btn1"><%= link_to "Go to admin users list", admin_users_path %></button>
        <button type="button" class="btn1">  <%= link_to "Create admin user", new_admin_user_path %></button>
          <% end %>
          <% else %>
          <button type="button" class="btn1">  <%= link_to "Sign up", new_user_path %></button>
          <button type="button" class="btn1">  <%= link_to "Login", new_session_path %></button>
          <% end %>
        </div>
        <%= yield %>
      </body>
    </html>
